//xml Main Activity suatu main layout untuk membuat fragment bottom view

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation"/>

</RelativeLayout>

//Bottom Navigation dengan item untuk membuat tombol navigasinya

<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:id="@+id/nav_chats"
    android:icon="@drawable/ic_baseline_chat_24"
    android:title="Chats"/>

    <item
        android:id="@+id/nav_status"
        android:icon="@drawable/ic_baseline_history_24"
        android:title="Status"/>

    <item
        android:id="@+id/nav_calls"
        android:icon="@drawable/ic_baseline_call_24"
        android:title="Calls"/>
    <item
        android:id="@+id/nav_profile"
        android:icon="@drawable/ic_baseline_person_24"
        android:title="Profile"/>


</menu>

